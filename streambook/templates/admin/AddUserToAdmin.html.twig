{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1>Gestion Utilisateur</h1>

    <form action="{{ path('app_newUserToAdmin') }}" method="post">
        <div class="form-group">
            <label for="exampleFormControlSelect1">SÃ©lectionner un utilisateur</label>
            <select class="form-control" id="exampleFormControlSelect1" name="id">
                {% if allUsers is defined %}
                    {% for oneUser in allUsers %}
                        <option  name="id" value="{{ oneUser.id }}"> nom : {{ oneUser.name }},
                                                                     Email : {{ oneUser.email }},
                                                                     {% if oneUser.level == 1 %}
                                                                         Admin
                                                                     {% endif %}
                                                                     {% if oneUser.level == -1 %}
                                                                         Banni
                                                                     {% endif %}
                        </option>
                    {% endfor %}
                {% endif %}
            </select>
        </div>
        <input class="btn btn-secondary" type="submit" class="btn btn-success" name="submit_add_admin" value="Be Admin">
        <input class="btn btn-info" type="submit" class="btn btn-danger" name="submit_delete_admin" value="Be User">
        <input class="btn btn-warning" type="submit" class="btn btn-danger" name="submit_ban" value="Banning">
        <input class="btn btn-danger" type="submit" class="btn btn-danger" name="submit_delete" value="Delete">
    </form>

{% endblock %}
