{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <h1 class="h3 mb-3 font-weight-normal">Créer un nouveau livre</h1>

    {{ form_start(bookForm) }}
        {{ form_row(bookForm.title, {
            attr: { placeholder: 'TITRE', class: 'form-control', }
        }) }}
        {{ form_row(bookForm.description, {
            attr: { placeholder: 'DESCRIPTION', class:'form-control'}
        }) }}
        {{ form_row(bookForm.content, {
            attr: { placeholder: 'CONTENU', class:'form-control'}
        }) }}
        {{ form_row(bookForm.url, {
            attr: { placeholder: 'LIEN DU FLYER', class:'form-control'}
        }) }}
        <button class="btn btn-primary">Créer</button>
    {{ form_end(bookForm) }}

{% endblock %}