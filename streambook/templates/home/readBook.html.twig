{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <style xmlns="http://www.w3.org/1999/html">
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
        <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="row">
                        <!-- Area Chart -->
                        <div class="col-xl-8 col-lg-7">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">{{ book.title }}</h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Liste des pages
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                            <div class="dropdown-header">Changer de page</div>
                                            {% for page in pages %}
                                                <a class="dropdown-item" href="javascript:AfficherMasquer({{ loop.index }})">page : {{ loop.index }}</a>
                                            {% endfor %}
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="#">Les oeuvres du même auteur</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    {% for page in pages %}
                                        {% if loop.index == 1 %}
                                            <div id="{{ loop.index }}" style="display: block">
                                        {% else %}
                                            <div id="{{ loop.index }}" style="display: none">
                                        {% endif %}
                                                {% for pageUser in page.user %}
                                                    {% if pageUser.id == user.id%}
                                                        <h2 style="float: right"> ✅</h2>
                                                    {% endif %}
                                                {% endfor %}
                                                <h6>Page : {{ loop.index }}</h6>
                                                <h4>{{ page.title }}</h4>
                                                {{ page.content | raw }}
                                                <div class="card-body">
                                                    <p>Copyright ©</p>
                                                </div>
                                                <div class="mt-4 text-center small">
                                                    <form action="{{ path('app_readBook', {'id':book.id}) }}" method="post">
                                                        <div class="form-group">
                                                            <input type="hidden" name="userRead" value="{{ user.id }}">
                                                            <input type="hidden" name="pageRead" value="{{ page.id }}">
                                                        </div>
                                                        <input class="btn btn-success" type="submit" class="btn btn-success" name="read" value="J'ai terminé">
                                                    </form>
                                                </div>
                                                <a class="btn btn-success" href="javascript:TerminerCettePage({{ loop.index }})">je passe à la page {{ loop.index + 1 }} <i class="fa fa-sign-in"></i></a>
                                            </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <!-- Pie Chart -->
                        <div class="col-xl-4 col-lg-5">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Description</h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                            <div class="dropdown-header">Changer de page</div>
                                            <a class="dropdown-item" href="#">Page 1</a>
                                            <a class="dropdown-item" href="#">Page 2</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="#">Les oeuvres du même auteur</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <p>{{ book.description }}</p>
                                </div>
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Flyer</h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                            <div class="dropdown-header">Changer de page</div>
                                            <a class="dropdown-item" href="#">Page 1</a>
                                            <a class="dropdown-item" href="#">Page 2</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="#">Les oeuvres du même auteur</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="text-center">
                                        <img class="center-block" style="width: 80%; height: 90%;" src="{{ book.url }}" alt="">
                                    </div>
                                </div>
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Commentaires</h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                            <div class="dropdown-header">Changer de page</div>
                                            <a class="dropdown-item" href="#">Page 1</a>
                                            <a class="dropdown-item" href="#">Page 2</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="#">Les oeuvres du même auteur</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Card Body -->
                                {% for comment in comments %}
                                    {% if comment.books.id == book.id %}
                                        <div class="card-body">
                                            <div class="">
                                                <p style="">{{ comment.user.name }}</p>
                                                <p class="small-text" style="float: right; font-size: smaller">{{ comment.date|date("m/d/Y h:m:s") }}</p>
                                            </div>
                                            <div class="" style="margin-top: 20px">
                                                <h6 style="">{{ comment.content|raw }}</h6>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                        <form action="{{ path('app_readBook', {'id':book.id}) }}" method="post">
                            <div class="form-group">
                                <head>
                                    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
                                    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
                                    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>
                                    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.js"></script>
                                </head>
                                <textarea name="content" id="summernote"></textarea>
                                <input type="hidden" value="{{ book.id }}" name="bookId" id="bookid">
                                <script>
                                    $('#summernote').summernote({
                                        placeholder: 'Laisser un commentaire...',
                                        tabsize: 2,
                                        height: 200,
                                    });
                                </script>
                            </div>
                            <input class="btn btn-success" type="submit" class="btn btn-success" name="submit_comment" value="envoyer">
                        </form>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/chart-area-demo.js"></script>
    <script src="js/demo/chart-pie-demo.js"></script>




    </body>

{% endblock %}
